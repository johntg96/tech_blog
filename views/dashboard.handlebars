<div class="container">
  <h1 class="d-flex justify-content-center align-items-center">Dashboard</h1>
  <div id="new-post">
    <button class="btn button-blue" id="new-post-btn">New Blog Post</button>
    <div class="new-post-form mt-4">
      <div class="mb-4">
          <label for="blogPostTitle"><strong>Title</strong></label>
          <input id="blogPostTitle" type="text" name="title" class="form-control" placeholder="Type blog post title here.." required>
      </div>
      <div class="mb-4">
          <label for="blogPostBody"><strong>Body Content</strong></label>
          <textarea id="blogPostBody" type="text" name="text" class="form-control" placeholder="Type blog post body (text content) here.." required></textarea>
      </div>
      <button class="btn button-yellow" id="submit-post-btn">Submit</button>
    </div>
  </div>
  <div id="old-posts" class="mt-5">
    <hr>
    <h3>My Previous Blog Posts</h3>
  </div>
</div>

