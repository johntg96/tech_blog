<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-12 col-md-6">
          <h1 class="text-center">Login</h1>
          <div class="mb-3">
              <label for="emailField"><strong>Email</strong></label>
              <input id="emailField" type="text" name="email" class="form-control" placeholder="Enter Email" required>
          </div>
          <div class="mb-3">
              <label for="passwordField"><strong>Password</strong></label>
              <input id="passwordField" type="password" name="password" class="form-control" placeholder="Enter Password" required>
          </div>
          <div class="text-center">
            <button id="loginBtn" class="btn button-blue">Login</button>
            <button id="registerBtn" class="btn button-orange">New Registration</button>                    
        </div>
    </div>
</div>


