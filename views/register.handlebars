<div class="container">
  <div class="row justify-content-center align-items-center min-vh-100">
    <div class="col-12 col-md-8 col-lg-6">
      <h1 class="text-center">Sign Up</h1>
      <div class="mb-3">
        <label for="email-name"><strong>Email</strong></label>
        <input id="emailField" type="text" name="email-name" class="form-control" placeholder="Enter Email" required>
      </div>
      <div class="mb-3">
        <label for="password"><strong>Choose a password</strong></label>
        <h5 style="font-size:12px;color:gray;" class="mt-2">*Password must be between 8 and 15 alpha-numeric characters*</h5>
        <input id="passwordField" type="password" name="password" class="form-control" placeholder="Enter Password" required/>
      </div>
      <div class="mb-3">
        <label for="verify-password"><strong>Re-enter password</strong></label>
        <input id="passwordFieldVerify" type="password" name="verify-password" class="form-control" placeholder="Verify Password" required/>
      </div>
      <div class="mb-3">
        <label for="about-me"><strong>Introduce Yourself</strong></label>
        <textarea id="register-about-me" type="password" name="about-me" class="form-control" placeholder="Example: Why are you interested in tech?" required></textarea>
      </div>
      <div class="text-center">
        <button id="registerBtn" class="btn button-blue">Register</button>
        <button id="loginBtn" class="btn btn-secondary">Back to Login</button>
      </div>
    </div>
  </div>
</div>

